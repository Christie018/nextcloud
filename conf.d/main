#!/bin/sh -ex

DB_NAME=owncloud
DB_USER=owncloud
DB_PASS=$(mcookie)

ADMIN_NAME=admin
ADMIN_PASS=turnkey

SRC=/usr/local/src
WEBROOT=/var/www/owncloud

# unpack and tweak permissions
tar -xjf $SRC/owncloud-*.tar.bz2 -C $(dirname $WEBROOT)
rm $SRC/owncloud-*.tar.bz2
chown -R root:root $WEBROOT
chown -R www-data:www-data $WEBROOT/config
chmod 775 $WEBROOT/config
mkdir -p $WEBROOT/data
chown -R www-data:www-data $WEBROOT/data

# configure apache
a2dissite default
a2ensite owncloud
a2enmod rewrite

# start services
/etc/init.d/mysql start
/etc/init.d/apache2 start

# setup the database
MYSQL_BATCH="mysql --user=root --password=$MYSQL_PASS --batch"
MYSQL_ADMIN="mysqladmin --user=root --password=$MYSQL_PASS"

$MYSQL_ADMIN create $DB_NAME
$MYSQL_BATCH --execute "grant all privileges on $DB_NAME.* to $DB_USER@localhost identified by '$DB_PASS'; flush privileges;"

# autoconfig curl based install
cat >$WEBROOT/config/autoconfig.php<<EOF
<?php
\$AUTOCONFIG = array(
    "installed" => false,
    "adminlogin" => "$ADMIN_NAME",
    "adminpass" => "$ADMIN_PASS",
    "directory" => "$WEBROOT/data",
    "dbtype" => "mysql",
    "dbname" => "$DB_NAME",
    "dbuser" => "$DB_USER",
    "dbpass" => "$DB_PASS",
    "dbhost" => "localhost",
    "dbtableprefix" => ""
);
?>
EOF

curl -c /tmp/cookie -b /tmp/cookie http://127.0.0.1/index.php
rm -f $WEBROOT/config/autoconfig.php
rm -f /tmp/cookie

# bugfix: image thumbnails aren't displayed
sed -i '/^$/d' $WEBROOT/apps/files_odfviewer/appinfo/app.php

# tweak footer
TEMPLATE=$WEBROOT/core/templates/layout.guest.php
sed -i "s|<footer>.*|<footer><p class='info' style='width: auto \!important;'><a href='http://www.turnkeylinux.org/owncloud'>ownCloud Appliance</a> \&ndash; Powered by <a href='http://www.turnkeylinux.org'>TurnKey Linux</a></p></footer>|" $TEMPLATE

# tweak permissions
chmod 640 $WEBROOT/config/config.php

# stop services
/etc/init.d/mysql stop
/etc/init.d/apache2 stop

